{
  "name": "incremental-tsc",
  "version": "0.0.3",
  "description": "Typecheck new typescript files incrementally",
  "author": "Joseph Morag",
  "license": "MIT",
  "prettier": {
    "parser": "typescript",
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "bin": {
    "incremental-tsc": "./index.js"
  },
  "scripts": {
    "npm": "tsc index.ts && chmod +x ./index.js && yarn publish"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@types/yargs": "^15.0.9"
  },
  "dependencies": {
    "typescript": "^4.0.3",
    "yargs": "^16.1.0"
  }
}
